<html lang="en" dir="ltr">
  <head>
    <title>Verification Code</title>
    <style>
      @font-face {
        font-family: "Roboto";
        font-style: normal;
        font-weight: 400;
        src: url("https://fonts.gstatic.com/s/roboto/v27/KFOmCnqEu92Fr1Mu4mxKKTU1Kg.woff2")
          format("woff2");
      }
    </style>
  </head>
  <body>
    <table cellpadding="0" cellspacing="0" border="0" width="100%">
      <tr>
        <td align="center">
          <table cellpadding="0" cellspacing="0" border="0" width="600">
            <tr>
              <td>
                <h2
                  style="
                    font-family: Roboto, Verdana;
                    font-size: 24px;
                    margin: 0;
                  "
                >
                  Hello {{ username }},
                </h2>
              </td>
            </tr>
            <tr>
              <td>
                <p
                  style="
                    font-family: Roboto, Verdana;
                    font-size: 16px;
                    margin: 0;
                  "
                >
                  Thank you for registering. Please use the following
                  verification code to complete your registration:
                </p>
              </td>
            </tr>
            <tr>
              <td>
                <p
                  style="
                    font-family: Roboto, Verdana;
                    font-size: 16px;
                    margin: 0;
                  "
                >
                  {{ otp }}
                </p>
              </td>
            </tr>
            <tr>
              <td>
                <p
                  style="
                    font-family: Roboto, Verdana;
                    font-size: 16px;
                    margin: 0;
                  "
                >
                  If you did not request this code, please ignore this email.
                </p>
              </td>
            </tr>
            <!-- 
            <tr>
              <td>
                <a href="http://localhost:3000/verify/{{username}}" style="text-decoration: none; color: #61dafb;">
                  <button style="background-color: #ffffff; border: none; padding: 10px 20px; font-size: 16px; cursor: pointer;">Verify here</button>
                </a>
              </td>
            </tr>
            -->
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>
